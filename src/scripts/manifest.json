{
  "short_name": "EMASYA",
  "name": "EMASYA",
  "manifest_version": 3,
  "version": "1.0",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "src/scripts/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/scripts/content-script.ts"]
    }
  ],
  "action": {
    "default_title": "EMASYA",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "clipboardWrite",
    "notifications",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://jgp4iec7b3.execute-api.eu-west-1.amazonaws.com/default/*",
    "https://api.tatum.io/*"
  ]
}
